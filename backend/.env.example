# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (MAMP MySQL)
DATABASE_URL="mysql://root:root@localhost:8889/sellerboard"

# Redis Configuration (install via: brew install redis && brew services start redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Amazon SP-API Credentials
# Get these from: https://developer-docs.amazon.com/sp-api/
AMAZON_CLIENT_ID=your_client_id_here
AMAZON_CLIENT_SECRET=your_client_secret_here
AMAZON_REFRESH_TOKEN=your_refresh_token_here
AMAZON_REGION=na
AMAZON_MARKETPLACE_ID=ATVPDKIKX0DER

# Sync Intervals (in milliseconds)
SYNC_ORDERS_INTERVAL=300000
SYNC_FINANCES_INTERVAL=600000
SYNC_INVENTORY_INTERVAL=900000
